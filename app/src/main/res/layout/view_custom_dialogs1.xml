<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_dialog_02"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_dialog_01"
    android:layout_marginRight="@dimen/margin_dialog_01"
    android:background="@drawable/bg_corners_white"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_dialog_02"
        android:textSize="@dimen/text_size_dialog_01"
        android:gravity="center"
        android:textColor="#000000"/>

    <TextView 
        android:id="@+id/tvline3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddd"/>
    
    <TextView 
        android:id="@+id/message"  
        android:layout_width="@dimen/width_dialog_02"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_dialog_03"
        android:layout_marginRight="@dimen/margin_dialog_03"
        android:layout_marginTop="@dimen/margin_dialog_04"
        android:layout_marginBottom="@dimen/margin_dialog_04"
        android:textSize="@dimen/text_size_dialog_04"
        android:textColor="#222222"/>
    
    <EditText
        android:id="@+id/etMessage1"
        android:layout_width="@dimen/width_dialog_02"
        android:layout_marginLeft="@dimen/margin_dialog_03"
        android:layout_marginRight="@dimen/margin_dialog_03"
        android:layout_marginBottom="@dimen/margin_dialog_04"
        android:maxLength="8"
        android:digits="@string/invitecode_digits2"
        android:layout_height="wrap_content"
        android:background="@drawable/corners"
        android:singleLine="true"
        android:padding="5dp"
        android:textSize="14sp"
        android:textColor="#222222"
        android:textColorHint="#999999" />
    
    <EditText
        android:id="@+id/etMessage"
        android:layout_width="@dimen/width_dialog_02"
        android:layout_marginLeft="@dimen/margin_dialog_03"
        android:layout_marginRight="@dimen/margin_dialog_03"
        android:layout_marginBottom="@dimen/margin_dialog_04"
        android:maxLength="8"
        android:digits="@string/invitecode_digits2"
        android:layout_height="wrap_content"
        android:background="@drawable/corners"
        android:singleLine="true"
        android:padding="5dp"
        android:textSize="14sp"
        android:textColor="#222222"
        android:textColorHint="#999999" />
    
    <ImageView
        android:id="@+id/ivMessage" 
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/margin_dialog_04"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/app_name"/>
    
    <TextView 
        android:id="@+id/tvline2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddd"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button 
           android:id="@+id/negativeButton"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:paddingTop="@dimen/margin_dialog_05"
           android:paddingBottom="@dimen/margin_dialog_05"
           android:background="@drawable/bg_dialog_button_left"
           android:textSize="@dimen/text_size_dialog_03"
           android:textColor="@color/lightskyblue"
           android:text="确定" />
        <TextView 
            android:id="@+id/tvline"
            android:layout_width="@dimen/width_dialog_01"
            android:layout_height="match_parent"
            android:background="#dddddd"/>
        <Button 
           android:id="@+id/positiveButton"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:paddingTop="@dimen/margin_dialog_05"
           android:paddingBottom="@dimen/margin_dialog_05"
           android:background="@drawable/bg_dialog_button_right"
           android:textSize="@dimen/text_size_dialog_03"
           android:textColor="@color/lightskyblue"
           android:text="取消" />
    </LinearLayout>
</LinearLayout>
